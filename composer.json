{
    "name"              : "jbzoo/html",
    "type"              : "library",
    "description"       : "HTML helper for easy way form building from any PHP code",
    "license"           : "MIT",
    "keywords"          : ["html", "render", "form", "controls", "rendering", "inputs"],
    "minimum-stability" : "stable",
    "authors"           : [
        {
            "name"  : "Sergey Kalistratov",
            "email" : "kalistratov.s.m@gmail.com",
            "role"  : "developer"
        },
        {
            "name"  : "SmetDenis",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],
    "require"           : {
        "php"        : ">=5.3.10",
        "jbzoo/path" : "^1.0"
    },
    "require-dev"       : {
        "jbzoo/phpunit" : "^1.0"
    },
    "autoload"          : {
        "psr-4" : {
            "JBZoo\\Html\\" : "src"
        }
    },
    "autoload-dev"      : {
        "psr-4" : {
            "Custom\\Html\\Render\\" : "./tests/custom"
        }
    },
    "extra"             : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    },
    "config"            : {
        "optimize-autoloader" : true
    },
    "support"           : {
        "issues" : "https://github.com/JBZoo/Html/issues"
    }
}
